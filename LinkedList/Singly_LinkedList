#include <stdio.h>
#include <stdlib.h>

struct node {
    int info;
    struct node *next;
};
typedef struct node* NODE;

/* allocate and initialize a node */
NODE create_node(int ele) {
    NODE temp = malloc(sizeof *temp);
    if (!temp) {
        perror("malloc");
        return NULL;
    }
    temp->info = ele;
    temp->next = NULL;
    return temp;
}

/* insert at front - note: accept pointer to head */
void insert_front(NODE first, int ele) {
    NODE temp = create_node(ele);
    if (!temp) return;
    temp->next = first;
    first = temp;
    printf("Inserted %d at front\n", ele);
}

/* insert at rear - accept pointer to head */
void insert_rear(NODE first, int ele) {
    NODE temp = create_node(ele);
    if (!temp) return;

    if (first == NULL) {
        first = temp;
        printf("Inserted %d as first node\n", ele);
        return;
    }

    NODE curr = first;
    while (curr->next != NULL)
        curr = curr->next;
    curr->next = temp;
    printf("Inserted %d at rear\n", ele);
}

void display_list(NODE first) {
    if (first == NULL) {
        printf("List empty\n");
        return;
    }
    printf("List: ");
    for (NODE cur = first; cur != NULL; cur = cur->next)
        printf("%d ", cur->info);
    printf("\n");
}

int main(void) {
    NODE first = NULL;
    int ele, ch;

    for (;;) {
        printf("1 for insert @ front\n2 for insert @ rear\n3 for display\n4 for exit\n");
        printf("Enter your choice: ");
        if (scanf("%d", &ch) != 1) { while (getchar() != '\n'); printf("Invalid input\n"); continue; }

        switch (ch) {
            case 1:
                printf("Enter ele: ");
                if (scanf("%d", &ele) != 1) { while (getchar() != '\n'); printf("Invalid\n"); break; }
                insert_front(&first, ele);
                break;

            case 2:
                printf("Enter ele: ");
                if (scanf("%d", &ele) != 1) { while (getchar() != '\n'); printf("Invalid\n"); break; }
                insert_rear(&first, ele);
                break;

            case 3:
                display_list(first);
                break;

            case 4:
                while (first) { NODE t = first; first = first->next; free(t); }
                return 0;

            default:
                printf("Invalid\n");
                break;
        }
    }
    return 0;
}
